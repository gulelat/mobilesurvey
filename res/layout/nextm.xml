<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"    		
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"    		
	android:layout_gravity="center"    		
	android:orientation="vertical"
	android:id="@+id/layoutmext">
	
		<LinearLayout 
		android:paddingLeft="20dip"
    	android:paddingRight="20dip"    		
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"    		
		android:layout_gravity="center"    		
		android:orientation="horizontal">
		<TextView
		android:id="@+id/progressall"
		android:paddingRight="50dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="共有20道题"
		android:textColor="#EA0000"/>
		<TextView
		android:id="@+id/progressremainder"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="还剩20道题"
		android:textColor="#EA0000"/>
	</LinearLayout>
	
	
  	<TextView
    	android:id="@+id/title"
    	android:text="LOGIN"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"    		
    />
  	<RelativeLayout
  	    android:gravity="center"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"> 
	<CheckBox
	    android:id="@+id/moption1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="moption1">
	</CheckBox>
	<CheckBox
	    android:id="@+id/moption2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="moption2"
	    android:layout_below="@id/moption1">    
	</CheckBox>
	
		<CheckBox
	    android:id="@+id/moption3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="moption3"
	    android:layout_below="@id/moption2">
	</CheckBox>
	<CheckBox
	    android:id="@+id/moption4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="moption4"
	    android:layout_below="@id/moption3">    
	</CheckBox>
	
	<CheckBox
	    android:id="@+id/moption5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="moption5"
	    android:layout_below="@id/moption4">
	</CheckBox>
	<CheckBox
	    android:id="@+id/moption6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="moption6"
	    android:layout_below="@id/moption5">    
	</CheckBox>
	    
	    
	    
	    
	</RelativeLayout>  
	<LinearLayout 
		android:layout_below="@id/optiongroup"
		android:layout_marginTop="5dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
  		android:layout_gravity="center" >			
		<Button
			android:id="@+id/last"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="上一题"/>
		<Button 
			android:id="@+id/next"
			android:layout_marginLeft="50dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="下一题"/>
	</LinearLayout>
			
</LinearLayout>